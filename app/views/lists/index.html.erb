<div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>

<div class="container">

  <div class="row justify-content-center mb-4">
    <div class="col-10">
      <h2>My lists</h2>
    </div>
    <div class="col-2 d-flex align-items-center">
      <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
    </div>
  </div>

  <div class="row">

    <% @lists.each do |list| %>
      <div class="col-3">
        <% if list.image_url.nil? %>
          <% image_url = "https://images.unsplash.com/photo-1512149177596-f817c7ef5d4c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=400&q=80" %>
        <% else %>
          <% image_url = list.image_url %>
        <% end %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_url %>)">
          <%= link_to list.name, list_path(list) %>
        </div>
      </div>
    <% end %>

  </div>

</div>
